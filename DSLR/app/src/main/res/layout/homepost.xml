<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colpostbg"
        android:orientation="vertical"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colposthead"
            android:orientation="horizontal"
            android:padding="3dp">

            <ImageView
                android:id="@+id/cardprofileimgid"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="2dp"
                android:background="@drawable/border"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/cardprofilenameid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="DSLR user name"
                android:textStyle="bold"
                android:textColor="@color/namecol"
                android:textSize="15dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/cardplacenameid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colpostnamebg"
            android:text="Name of the place"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="3dp"
            android:lines="1"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/cardplaceimgid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colpostimgbg"
            android:padding="3dp"
            android:src="@drawable/bg" />

        <TextView
            android:id="@+id/cardplacedesid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colpostdesbg"
            android:padding="3dp"
            android:textStyle="bold"
            android:textColor="@color/coldes"
            android:lines="3"
            android:text="Description about the place"
            android:textSize="15dp" />

    </LinearLayout>

</android.support.v7.widget.CardView>